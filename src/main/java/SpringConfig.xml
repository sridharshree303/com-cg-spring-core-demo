
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<!-- Dependency injection -->

	<!-- Property injection / setter injection -->

	<bean id="employee" class="com.cg.spring.core.demo.model.Employee">
		<property name="eid">
			<value>101</value>
		</property>
		<property name="firstName">
			<value>Sonu</value>
		</property>
		<property name="salary">
			<value>10.6</value>
		</property>
	</bean>
	
	<bean id="employee1" class="com.cg.spring.core.demo.model.Employee">
		<property name="eid">
			<value>102</value>
		</property>
		<property name="firstName">
			<value>Monu</value>
		</property>
		<property name="salary">
			<value>10.8</value>
		</property>
	</bean>
	
	<!--  Constructor Injection -->
	
	<bean id ="employee2" class="com.cg.spring.core.demo.model.Employee">
		<constructor-arg value="103" type="int"></constructor-arg>
		<constructor-arg value="Tonu" type="java.lang.String"></constructor-arg>
		<constructor-arg value="12.5" type="double"></constructor-arg>
	</bean>
	
	<!--  Collection Injection -->
	<bean id ="department" class ="com.cg.spring.core.demo.model.Department">
		<property name="id">
			<value>1001</value>
		</property>
		<property name="name">
			<value>"Sectors"</value>
		</property>
		<property name="functions">
		<list>
			<value>"govt"</value>
			<value>"MNC"</value>
			<value>"private"</value>
			<value>"public"</value>
		</list>
		</property>
	
	</bean >
	
	<bean id ="department1" class ="com.cg.spring.core.demo.model.Department">
		<constructor-arg value ="1002" type="int"></constructor-arg>
		<constructor-arg value="Languages" type="java.lang.String"></constructor-arg>
		<constructor-arg>
		<list>  
		<value>Java</value>  
		<value>C++</value>  
		<value>Python</value>  
		</list>  
		</constructor-arg>
	</bean>
	
	
	<!-- inner beans -->
	
	<bean id="employee3" class="com.cg.spring.core.demo.model.Employee">
		<property name="eid">
			<value>104</value>
		</property>
		<property name="firstName">
			<value>Tonu</value>
		</property>
		<property name="salary">
			<value>15.8</value>
		</property>
		<property name="department">
			<bean id="department"
				class="com.cg.spring.core.demo.model.Department">
				<property name="id" value="20"></property>
				<property name="name" value="Marketing"></property>
				<property name="functions">
					<list>
						<value>Sales</value>
						<value>Promotions</value>
						<value>Customer Care</value>
					</list>
				</property>
			</bean>
		</property>
	</bean>
	
	<!-- autowiring -->
	<bean id="employee5" class="com.cg.spring.core.demo.model.Employee" autowire="byName">
		<property name="eid">
			<value>105</value>
		</property>
		<property name="firstName">
			<value>Sridhar</value>
		</property>
		<property name="salary">
			<value>22.0</value>
		</property>
	</bean>
	

</beans>





